<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.Heading1" parent="">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/switzer_bold</item>
    </style>

    <style name="TextAppearance.App.Heading2" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/switzer_bold</item>
    </style>

    <style name="TextAppearance.App.Heading3" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/switzer_bold</item>
    </style>

    <style name="TextAppearance.App.Paragraph" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/switzer_regular</item>
    </style>

    <style name="TextAppearance.App.Body" parent="">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/switzer_bold</item>
    </style>

    <style name="Widget.App.SearchViewWrapper" parent="">
        <item name="colorControlNormal">@color/softBlack</item>
        <item name="android:textColorPrimary">@color/softBlack</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorControlActivated">@color/softBlack</item>
    </style>

    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/primary</item>
        <item name="colorControlNormal">@color/softBlack</item>
    </style>

    <style name="Widget.App.InputWrapper.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/state_colors_input</item>
        <item name="android:textColorHint">@color/state_colors_input</item>
        <item name="hintTextColor">@color/state_colors_input</item>
        <item name="endIconTint">@color/state_colors_input</item>
        <item name="cursorColor">@color/inputCursor</item>
        <item name="boxStrokeErrorColor">@color/inputError</item>
        <item name="errorTextColor">@color/inputError</item>
        <item name="errorIconTint">@color/inputError</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Widget.App.SearchInputWrapper.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/state_colors_search_input_wrapper</item>
        <item name="startIconTint">@color/state_colors_search_input_wrapper</item>
        <item name="cursorColor">@color/inputCursor</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Widget.App.InputWrapper.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/backgroundInputFilled</item>
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="cursorColor">@color/softBlack</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="android:textColor">@color/softBlack</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconTint">@color/primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.InputWrapperCorners.Filled</item>
    </style>

    <style name="Widget.App.Input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="android:textColor">@color/softBlack</item>
    </style>

    <style name="ShapeAppearance.App.InputWrapperCorners.Filled" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.DropdownWrapper" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/state_colors_input</item>
        <item name="android:textColorHint">@color/state_colors_input</item>
        <item name="hintTextColor">@color/state_colors_input</item>
        <item name="endIconTint">@color/state_colors_input</item>
        <item name="boxStrokeErrorColor">@color/inputError</item>
        <item name="errorTextColor">@color/inputError</item>
        <item name="errorIconTint">@color/inputError</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="colorControlHighlight">@color/primaryPastel</item>
    </style>

    <style name="Widget.App.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/softBlack</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/state_colors_primary_button_background</item>
        <item name="rippleColor">@color/primaryButtonRipple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/state_colors_secondary_button_ripple</item>
        <item name="android:textColor">@color/state_colors_secondary_button_stroke_and_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/state_colors_secondary_button_stroke_and_text</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Widget.App.Button.Icon.Primary" parent="Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/primaryButtonRipple</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.App.Button.Icon.Secondary" parent="Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/secondaryButtonRipple</item>
        <item name="iconTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.App.Button.Icon.Secondary.WithoutBorders" parent="Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/secondaryButtonRipple</item>
        <item name="iconTint">@color/darkGrey</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.App.Button.Delete" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/deleteButton</item>
        <item name="rippleColor">@color/deleteButtonRipple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/switzer_regular</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Widget.App.FloatingActionButton.Primary" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/secondaryPastel</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="rippleColor">@color/floatingActionButtonRipplePrimary</item>
    </style>

    <style name="Widget.App.FloatingActionButton.Secondary" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/primary</item>
        <item name="backgroundTint">@color/primaryPastel</item>
        <item name="rippleColor">@color/floatingActionButtonRippleSecondary</item>
    </style>

    <style name="ShapeAppearance.App.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ThemeOverlay.App.Dropdown" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>
</resources>