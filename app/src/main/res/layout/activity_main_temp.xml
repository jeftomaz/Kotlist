<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_temp_main">

    <Button
        android:id="@+id/main_add_listas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela adicionar listas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_add_itens"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/main_add_itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela adicionar itens"
        app:layout_constraintTop_toBottomOf="@id/main_add_listas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_list_itens"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/main_list_itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela lista itens (lista interna)"
        app:layout_constraintTop_toBottomOf="@id/main_add_itens"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>