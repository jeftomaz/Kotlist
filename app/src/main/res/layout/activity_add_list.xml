<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_list_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_small"
    android:background="@color/white">

    <TextView
        android:id="@+id/add_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Nova Lista"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_medium"
        android:textColor="@color/softBlack"
        style="@style/Widget.App.Heading1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_list_list_name_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:hint="Nome da lista (Ex: Compras, Viagem)"
        style="@style/Widget.App.InputWrapper"
        app:layout_constraintTop_toBottomOf="@id/add_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_list_list_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Input"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/add_list_image_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capa da lista"
        android:textColor="@color/softBlack"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        style="@style/Widget.App.Paragraph"
        app:layout_constraintTop_toBottomOf="@id/add_list_list_name_input_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/add_list_image_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.2:1"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:background="#DCDCDC"
        android:contentDescription="Foto da lista"
        app:shapeAppearanceOverlay="@style/Widget.App.RoundedImageView"
        app:layout_constraintTop_toBottomOf="@id/add_list_image_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_list_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camera_icon"
        android:layout_marginRight="@dimen/margin_medium"
        app:fabCustomSize="@dimen/floating_button"
        app:maxImageSize="32dp"
        style="@style/Widget.App.FloatActionButton.Secundary"
        app:layout_constraintEnd_toEndOf="@id/add_list_image_preview"
        app:layout_constraintTop_toBottomOf="@id/add_list_image_preview"
        app:layout_constraintBottom_toBottomOf="@id/add_list_image_preview" />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_list_add_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.Button.Primary"
        android:text="Adicionar Lista"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@id/add_list_cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_list_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.Button.Secondary"
        android:text="Cancelar"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>