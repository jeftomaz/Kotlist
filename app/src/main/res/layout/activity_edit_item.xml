<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_item_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium"
    android:background="@color/white">

    <TextView
        android:id="@+id/edit_item_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar item"
        android:layout_margin="@dimen/margin_medium"
        android:textColor="@color/softBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.App.Heading1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_item_name_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:hint="Nome do item"
        app:layout_constraintTop_toBottomOf="@id/edit_item_screen_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.App.InputWrapper.Outlined">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_item_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Input" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_item_quantity_input_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:hint="Quantidade"
        app:layout_constraintTop_toBottomOf="@id/edit_item_name_input_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_item_unit_dropdown_wrapper"
        style="@style/Widget.App.InputWrapper.Outlined">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_item_quantity_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            style="@style/Widget.App.Input" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_item_unit_dropdown_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_medium"
        android:hint="Unidade"
        app:layout_constraintTop_toBottomOf="@id/edit_item_name_input_wrapper"
        app:layout_constraintStart_toEndOf="@id/edit_item_quantity_input_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:materialThemeOverlay="@style/ThemeOverlay.App.Dropdown"
        style="@style/Widget.App.DropdownWrapper">

        <AutoCompleteTextView
            android:id="@+id/edit_item_unit_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:fadingEdge="horizontal"
            style="@style/Widget.App.Dropdown" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_item_category_dropdown_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:layout_margin="@dimen/margin_medium"
        android:hint="Categoria"

        app:layout_constraintTop_toBottomOf="@id/edit_item_quantity_input_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:materialThemeOverlay="@style/ThemeOverlay.App.Dropdown"
        style="@style/Widget.App.DropdownWrapper">

        <AutoCompleteTextView
            android:id="@+id/edit_item_category_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:maxLines="1"
            style="@style/Widget.App.Dropdown" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_item_delete_item_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@id/edit_item_cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_item_save_item_button"
        style="@style/Widget.App.Button.Delete" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_item_save_item_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@id/edit_item_cancel_button"
        app:layout_constraintStart_toEndOf="@id/edit_item_delete_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.App.Button.Primary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_item_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.App.Button.Secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>